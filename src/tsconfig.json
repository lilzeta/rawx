{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "../dist",
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2015",
        "lib": ["es2015"],
        "declaration": true,
        "noEmitOnError": true,
        "isolatedModules": true,
        "keyofStringsOnly": true, // fantastic
        "noImplicitOverride": true,
        "noImplicitAny": true,
        // "noUnusedLocals": true,
        // "strictPropertyInitialization":true,
        // "strictNullChecks":true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "resolveJsonModule": true, // WIP adding typedef values
        "esModuleInterop": false, // compiles to cjs, keep wrappers minimal
        "allowSyntheticDefaultImports": true, // similar to require style
        "useDefineForClassFields": true, // hwat why and hwen
        "sourceMap": true,
        // "explainFiles": true,
    },
    "include": ["**/*.ts"],
}
